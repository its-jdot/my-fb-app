<table>
    <tr>
        <th> Title </th>
        <th> Caption </th>
        <th colspan = "3" >  </th>
    </tr>

    <% @posts.each do |post| %>
        <tr>
            <th><%= post.title %></th>
            <th><%= post.title %></th>
            <th><%= link_to 'Show', post_path(post) %></th>
            <th><%= link_to 'Edit', edit_post_path(post) %></th>
            <th><%= link_to 'Delete', post_path(post),
                                        method: :delete,
                                        data: { confirm: 'Are you sure?' } %></th>
        </tr>
    <% end %>

</table>
